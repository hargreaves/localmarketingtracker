<p id="notice"><%= notice %></p>

<div class="span12">

<h3>
  <%= @initiative.name %>
</h3>

<p>
  <b>Market:</b>
  <%= @initiative.market.name %>
</p>

<p>
  <b>Launch Date:</b>
  <%= @initiative.launchdate %>
</p>

<p>
  <b>End Date:</b>
  <%= @initiative.enddate %>
</p>

<p>
  <b>Target:</b>
  <%= @initiative.target %>
</p>

<p>
  <b>Offer:</b>
  <%= @initiative.offer %>
</p>

<p>
  <b>Landing Page:</b>
  <a href="http://<%= @initiative.landingpage %>"><%= @initiative.landingpage %></a>
</p>

<p>
  <b>Budget:</b>
  $<%= @initiative.budget %>
</p>

<p>
  <b>Target Emails:</b>
  <%= @initiative.targetemails %>
</p>

<p>
  <b>Actual Emails:</b>
  <%= @initiative.actualemails %>
</p>

<p>
  <b>Spent:</b>
  $<%= @initiative.spent %>
</p>

<p>
  <b>Team Lead:</b>
  <%= @initiative.teamlead %>
</p>

<br />

<div class="span3">
<%= button_to 'Update Initiative', edit_initiative_path(@initiative), :method => 'get', :class => 'btn btn-primary' %> 
<%= button_to 'Return to List', initiatives_path, :method => 'get', :class => 'btn' %>
</div>
</div>